doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet",
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css",
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",
    crossorigin="anonymous")
    title 秘密の匿名掲示板
  body.container
    div.my-3
      a(href="/logout").btn.btn-info.float-right ログアウト
      h1 管理者運用日記
      a(href="/top").stretched-link.float-right トップページ
      a(href="/posts").stretched-link 投稿ページ
    h2 新規投稿
    form(method="post" action="/diaries")
      div.form-group
        span タイトル：
        input(type="text" name="title" value=title)
      div.form-group
        span 投稿内容：
        textarea(name="content" rows="4").form-control
        input(type="hidden" name="oneTimeToken" value=oneTimeToken)
      div.form-group
        button(type="submit").btn.btn-primary 投稿
    h2 投稿一覧
    each diary in diaries
      div.card.my-3
        div.card-header
            span タイトル : #{diary.title}
        div.card-body
          p.card-text(style="white-space:pre; overflow:auto;") #{diary.content}
        div.card-footer
          div 投稿日時: #{diary.formattedCreatedAt}
          form(method="post" action="/diaries?delete=1")
            input(type="hidden" name="id" value=diary.id)
            input(type="hidden" name="oneTimeToken" value=oneTimeToken)
            button(type="submit").btn.btn-danger.float-right 削除
    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js",
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl",
    crossorigin="anonymous")